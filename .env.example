# Backend Environment Variables
# Copy this file to .env and update values for your environment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Neon Serverless PostgreSQL connection string
# Format: postgresql://<user>:<password>@<host>/<database>?sslmode=require
DATABASE_URL='postgresql://neondb_owner:npg_OXgp7jlvJz6R@ep-little-wildflower-aiwwbpms-pooler.c-4.us-east-1.aws.neon.tech/neondb?sslmode=require&channel_binding=require'

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# Secret key for JWT token signing - MUST be changed in production
# Generate a secure key with: openssl rand -hex 32
JWT_SECRET=your-secure-jwt-secret-key-change-in-production

# JWT algorithm (HS256 is recommended for most use cases)
JWT_ALGORITHM=HS256

# Token expiration time in minutes (1440 = 24 hours)
JWT_EXPIRATION_MINUTES=1440

# =============================================================================
# BETTER AUTH CONFIGURATION
# =============================================================================
# Secret key for Better Auth session management
BETTER_AUTH_SECRET=your-super-secret-key-here

# Better Auth URL (should match frontend URL)
BETTER_AUTH_URL=http://localhost:3000

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Comma-separated list of allowed origins for CORS
# Add your frontend URLs here
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Debug mode (set to false in production)
DEBUG=false

# Application environment: development | staging | production
APP_ENV=development
